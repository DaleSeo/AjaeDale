---
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  ogTitle?: string;
  ogDescription?: string;
  currentPage?: "home" | "random" | "search" | "gag" | "tag" | "tags";
}

const {
  title,
  description = "아재개그와 유머 모음",
  ogTitle,
  ogDescription,
  currentPage,
} = Astro.props;

const siteTitle = `${title} - 아재달레`;
---

<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{siteTitle}</title>
    <meta name="description" content={description} />

    <!-- Open Graph for social sharing -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={ogTitle || siteTitle} />
    <meta property="og:description" content={ogDescription || description} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={ogTitle || siteTitle} />
    <meta name="twitter:description" content={ogDescription || description} />
  </head>
  <body>
    <header class="header" data-pagefind-ignore>
      <div class="header-content">
        <div class="logo-section">
          <h1 class="logo-title">
            <a href="/" class="logo-link">🤣 아재달레</a>
          </h1>
          <span class="logo-tagline">아재개그 저장소</span>
        </div>
        <nav class="nav">
          <a
            href="/"
            class={`nav-link ${currentPage === "home" ? "active" : ""}`}
          >
            🏠 홈
          </a>
          <a
            href="/random"
            class={`nav-link ${currentPage === "random" ? "active" : ""}`}
          >
            🎲 랜덤
          </a>
          <a
            href="/tags"
            class={`nav-link ${currentPage === "tags" || currentPage === "tag" ? "active" : ""}`}
          >
            🏷️ 태그
          </a>
          <a
            href="/search"
            class={`nav-link ${currentPage === "search" ? "active" : ""}`}
          >
            🔍 검색
          </a>
        </nav>
      </div>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer class="footer" data-pagefind-ignore>
      <p>Made with ❤️ for Everyone</p>
    </footer>

    <slot name="scripts" />
  </body>
</html>
