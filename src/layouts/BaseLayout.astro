---
export interface Props {
  title: string;
  description?: string;
  ogTitle?: string;
  ogDescription?: string;
  currentPage?: "home" | "random" | "search" | "gag" | "tag" | "tags";
}

const {
  title,
  description = "아재개그와 유머 모음",
  ogTitle,
  ogDescription,
  currentPage,
} = Astro.props;

const siteTitle = `${title} - 아재달레`;
---

<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{siteTitle}</title>
    <meta name="description" content={description} />

    <!-- Open Graph for social sharing -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={ogTitle || siteTitle} />
    <meta property="og:description" content={ogDescription || description} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={ogTitle || siteTitle} />
    <meta name="twitter:description" content={ogDescription || description} />
  </head>
  <body>
    <header>
      <div class="header-content">
        <div class="logo-section">
          <h1><a href="/" class="logo-link">🤣 아재달레</a></h1>
          <span class="tagline">아재개그 저장소</span>
        </div>
        <nav>
          <a
            href="/"
            class={`nav-link ${currentPage === "home" ? "active" : ""}`}
          >
            🏠 홈
          </a>
          <a
            href="/random"
            class={`nav-link ${currentPage === "random" ? "active" : ""}`}
          >
            🎲 랜덤
          </a>
          <a
            href="/tags"
            class={`nav-link ${currentPage === "tags" || currentPage === "tag" ? "active" : ""}`}
          >
            🏷️ 태그
          </a>
          <a
            href="/search"
            class={`nav-link ${currentPage === "search" ? "active" : ""}`}
          >
            🔍 검색
          </a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>Made with ❤️ for Everyone</p>
    </footer>

    <slot name="scripts" />
  </body>
</html>

<style>
  :root {
    --color-primary: #2563eb;
    --color-primary-dark: #1e40af;
    --color-bg: #ffffff;
    --color-card: #f9fafb;
    --color-border: #e5e7eb;
    --color-text: #1f2937;
    --color-text-muted: #6b7280;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans KR", sans-serif;
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
  }

  header {
    padding: 1.5rem 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo-section {
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }

  .logo-link {
    color: var(--color-primary);
    text-decoration: none;
  }

  .logo-link:hover {
    opacity: 0.9;
  }

  header h1 {
    color: var(--color-primary);
    font-size: 2rem;
    margin: 0;
  }

  .tagline {
    color: var(--color-text-muted);
    font-size: 1rem;
    font-weight: 500;
  }

  nav {
    display: flex;
    gap: 1rem;
  }

  .nav-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    padding: 0.75rem 1.5rem;
    border: 2px solid var(--color-primary);
    border-radius: 8px;
    transition: all 0.2s;
  }

  .nav-link:hover {
    background-color: var(--color-primary);
    color: white;
  }

  .nav-link.active {
    background-color: var(--color-primary);
    color: white;
    font-weight: 700;
    cursor: default;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.2);
  }

  .nav-link.active:hover {
    transform: none;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  footer {
    text-align: center;
    padding: 3rem 1rem;
    margin-top: 3rem;
    border-top: 1px solid var(--color-border);
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    header {
      padding: 1rem;
    }

    .header-content {
      flex-direction: column;
      gap: 1rem;
    }

    .logo-section {
      flex-direction: column;
      align-items: center;
      gap: 0.25rem;
    }

    header h1 {
      font-size: 1.75rem;
    }

    .tagline {
      font-size: 0.875rem;
    }

    nav {
      justify-content: center;
    }

    .nav-link {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
    }

    main {
      padding: 2rem 1rem;
    }
  }
</style>

<style is:global>
  /* 공통으로 사용되는 글로벌 스타일 */

  .gag-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.875rem;
    padding: 0.375rem 0.75rem;
    background: var(--color-primary);
    color: white;
    border-radius: 9999px;
  }

  .gag-body {
    color: var(--color-text);
    font-size: 1rem;
    margin-bottom: 1rem;
    white-space: pre-line;
  }

  .pun-format {
    margin: 1rem 0;
  }

  .pun-format .question {
    color: var(--color-primary-dark);
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .pun-format .answer {
    color: white;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    padding: 0.75rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 8px;
    text-align: center;
  }

  .gag-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }
</style>
