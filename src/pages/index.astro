---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

type GagEntry = CollectionEntry<"gags">;

const allGags = await getCollection("gags", ({ data }: GagEntry) => {
  return data.published === true;
});

// 오늘의 개그 선택 (날짜 기반으로 일관된 선택)
function getTodaysGag(gags: GagEntry[]): GagEntry {
  const today = new Date();
  const dayOfYear = Math.floor(
    (today.getTime() - new Date(today.getFullYear(), 0, 0).getTime()) /
      (1000 * 60 * 60 * 24),
  );
  const index = dayOfYear % gags.length;
  return gags[index];
}

const todaysGag = getTodaysGag(allGags);
const totalGagsCount = allGags.length;
---

<BaseLayout title="홈" currentPage="home">
  <!-- 오늘의 개그 섹션 -->
  <section class="todays-gag">
    <div class="section-header">
      <h2>🌟 오늘의 개그</h2>
      <p>
        {
          new Date().toLocaleDateString("ko-KR", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </p>
    </div>

    <article class="featured-gag">
      <h3>{todaysGag.data.title}</h3>

      {
        todaysGag.data.body && (
          <div class="pun-format">
            <p class="question">Q: {todaysGag.data.title}</p>
            <p class="answer">A: {todaysGag.data.body}</p>
          </div>
        )
      }

      <div class="gag-footer">
        <div class="tags">
          {
            todaysGag.data.tags.map((tag: string) => (
              <span class="tag">#{tag}</span>
            ))
          }
        </div>
        <a href={`/gags/${todaysGag.data.slug}`} class="detail-link"
          >자세히 보기 →</a
        >
      </div>
    </article>
  </section>

  <!-- 더 많은 개그 보기 -->
  <section class="more-gags">
    <div class="stats">
      <p>
        총 <strong>{totalGagsCount}개</strong>의 개그가 기다리고 있어요!
      </p>
    </div>

    <div class="action-buttons">
      <a href="/search" class="action-button search"> 🔍 개그 검색하기 </a>
      <a href="/random" class="action-button random"> 🎲 랜덤 개그 보기 </a>
    </div>
  </section>
</BaseLayout>

<style>
  /* 오늘의 개그 섹션 */
  .todays-gag {
    margin-bottom: 3rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .section-header h2 {
    color: var(--color-primary);
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .section-header p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .featured-gag {
    background: var(--color-card);
    border: 2px solid var(--color-primary);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: var(--shadow-md);
    max-width: 600px;
    margin: 0 auto;
  }

  .featured-gag h3 {
    color: var(--color-primary-dark);
    font-size: 1.75rem;
    margin-bottom: 1rem;
    line-height: 1.4;
    text-align: center;
  }

  .featured {
    font-size: 0.875rem;
    color: #f59e0b;
    font-weight: 600;
  }

  .gag-card h2 {
    color: var(--color-primary-dark);
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  .detail-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
  }

  .detail-link:hover {
    color: var(--color-primary-dark);
  }

  /* 더 많은 개그 섹션 */
  .more-gags {
    text-align: center;
    padding: 3rem 0;
    background: var(--color-card);
    border-radius: 16px;
    margin-top: 2rem;
  }

  .stats {
    margin-bottom: 2rem;
  }

  .stats p {
    font-size: 1.25rem;
    color: var(--color-text);
  }

  .stats strong {
    color: var(--color-primary);
  }

  .action-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .action-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1.125rem;
    transition: all 0.2s;
    box-shadow: var(--shadow-sm);
  }

  .action-button:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .action-button.random {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  time {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1.5rem;
    }

    nav {
      justify-content: center;
    }

    .nav-link {
      padding: 0.625rem 1.25rem;
      font-size: 0.875rem;
    }

    .featured-gag {
      padding: 1.5rem;
      margin: 0 1rem;
    }

    .featured-gag h3 {
      font-size: 1.5rem;
    }

    .action-buttons {
      flex-direction: column;
      align-items: center;
    }

    .action-button {
      width: 100%;
      max-width: 280px;
    }

    .more-gags {
      margin: 2rem 1rem 0;
      padding: 2rem 1rem;
    }
  }
</style>
