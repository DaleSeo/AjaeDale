---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import GagCard from "../../components/GagCard.astro";

type GagEntry = CollectionEntry<"gags">;

export async function getStaticPaths() {
  const allGags = await getCollection("gags", ({ data }: GagEntry) => {
    return data.published === true;
  });

  return allGags.map((gag: GagEntry) => ({
    params: {
      slug: gag.data.slug,
    },
    props: { gag },
  }));
}

interface Props {
  gag: GagEntry;
}

const { gag }: Props = Astro.props;
---

<Layout title={gag.data.title} currentPage="gag">
  <article class="gag-detail-page">
    <GagCard
      gag={gag}
      variant="detail"
      titleLevel="h1"
      showDate={true}
      spoilerId={`gag-${gag.data.slug}`}
    />

