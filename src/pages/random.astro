---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import { tagToSlug } from "../utils/tagUtils";

type GagEntry = CollectionEntry<"gags">;

const allGags = await getCollection("gags", ({ data }: GagEntry) => {
  return data.published === true;
});

// 랜덤 개그 선택
function getRandomGag(gags: GagEntry[]): GagEntry {
  const randomIndex = Math.floor(Math.random() * gags.length);
  return gags[randomIndex];
}

const randomGag = getRandomGag(allGags);
---

<BaseLayout
  title="랜덤 개그"
  description="랜덤으로 선택된 아재개그를 즐겨보세요"
  currentPage="random"
>
  <section class="page-header">
    <h2>🎲 랜덤 개그</h2>
    <p>매번 새로운 개그를 만나보세요!</p>
  </section>
  <!-- 랜덤 개그 섹션 -->
  <section class="random-gag">
    <article class="featured-gag">
      <h2>{randomGag.data.title}</h2>

      {
        randomGag.data.body && (
          <div class="pun-format">
            <p class="answer">A: {randomGag.data.body}</p>
          </div>
        )
      }

      <div class="gag-footer">
        <div class="tags">
          {
            randomGag.data.tags.map((tag: string) => (
              <a href={`/tags/${tagToSlug(tag)}`} class="tag">
                #{tag}
              </a>
            ))
          }
        </div>
        <a href={`/gags/${randomGag.data.slug}`} class="detail-link"
          >자세히 보기 →</a
        >
      </div>
    </article>
  </section>

  <!-- 액션 버튼들 -->
  <section class="actions">
    <div class="action-buttons">
      <button
        type="button"
        class="action-button random"
        onclick="window.location.reload()"
      >
        🎲 다른 개그 보기
      </button>
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .page-header h2 {
    color: var(--color-primary);
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  /* 랜덤 개그 섹션 */
  .random-gag {
    margin-bottom: 3rem;
  }

  .featured-gag {
    background: var(--color-card);
    border: 2px solid var(--color-primary);
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: var(--shadow-md);
    max-width: 700px;
    margin: 0 auto;
  }

  .featured-gag h2 {
    color: var(--color-primary-dark);
    font-size: 2rem;
    margin-bottom: 1.5rem;
    line-height: 1.4;
    text-align: center;
  }

  .gag-header {
    justify-content: center;
  }

  .random-gag .gag-body {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    text-align: center;
    line-height: 1.6;
  }

  .random-gag .pun-format {
    margin: 1.5rem 0;
  }

  .random-gag .pun-format .question {
    font-size: 1.5rem;
    text-align: center;
  }

  .random-gag .pun-format .answer {
    font-size: 1.75rem;
    padding: 1.5rem;
    border-radius: 12px;
  }

  .random-gag .gag-footer {
    margin-top: 2rem;
    padding-top: 2rem;
  }

  .detail-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
  }

  .detail-link:hover {
    color: var(--color-primary-dark);
  }

  /* 액션 섹션 */
  .actions {
    text-align: center;
  }

  .action-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .action-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1.125rem;
    transition: all 0.2s;
    box-shadow: var(--shadow-sm);
    cursor: pointer;
    font-family: inherit;
  }

  .action-button:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .action-button.random {
    background: #059669;
  }

  .action-button.random:hover {
    background: #047857;
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1.5rem;
    }

    nav {
      justify-content: center;
    }

    .nav-link {
      padding: 0.625rem 1.25rem;
      font-size: 0.875rem;
    }

    main {
      padding: 2rem 1rem;
    }

    .featured-gag {
      padding: 2rem 1.5rem;
      margin: 0 1rem;
    }

    .featured-gag h2 {
      font-size: 1.75rem;
    }

    .pun-format .question {
      font-size: 1.25rem;
    }

    .pun-format .answer {
      font-size: 1.5rem;
      padding: 1.25rem;
    }

    .action-buttons {
      flex-direction: column;
      align-items: center;
    }

    .action-button {
      width: 100%;
      max-width: 280px;
    }

    .gag-footer {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
  }
</style>
