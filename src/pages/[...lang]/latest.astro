---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";
import {
  getStaticPathsLocales,
  normalizeLang,
  useTranslations,
} from "../../utils/i18n";

export async function getStaticPaths() {
  return getStaticPathsLocales().map((lang) => ({
    params: { lang },
  }));
}

type GagEntry = CollectionEntry<"gags">;

const { lang: langParam } = Astro.params;
const lang = normalizeLang(langParam);

const t = useTranslations(lang);

const allGags = await getCollection("gags", ({ data }: GagEntry) => {
  return data.published === true;
});

// 최신순으로 정렬 (createdAt 기준)
const sortedGags = allGags.sort((a: GagEntry, b: GagEntry) => {
  return (
    new Date(b.data.createdAt).getTime() - new Date(a.data.createdAt).getTime()
  );
});

// 표시할 개수 제한 (12개)
const displayGags = sortedGags.slice(0, 12);
---

<Layout
  title={t("최신 개그", "Latest Puns")}
  description={t("최근에 추가된 신선한 개그들", "Recently added fresh puns")}
  currentPage="latest"
  lang={lang}
>
  <!-- 헤더 섹션 -->
  <section class="from-primary/5 to-background bg-gradient-to-b px-4 py-12">
    <div class="container mx-auto max-w-4xl text-center">
      <h1 class="text-foreground mb-3 text-3xl font-bold md:text-4xl">
        🌟 {t("최신 개그", "Latest Puns")}
      </h1>
      <p class="text-muted-foreground text-lg">
        {t("최근에 추가된 신선한 개그들", "Recently added fresh puns")}
      </p>
    </div>
  </section>

  <!-- 최신 개그 섹션 -->
  <section class="px-4 py-8">
    <div class="container mx-auto max-w-6xl">
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {displayGags.map((gag: GagEntry) => <Card gag={gag} lang={lang} />)}
      </div>
    </div>
  </section>
</Layout>
