---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Heading from "../../components/Heading.astro";
import ListCard from "../../components/ListCard.astro";
import { getPageViewsMap } from "../../utils/analyticsApi";
import {
  getStaticPathsLocales,
  normalizeLang,
  useTranslations,
} from "../../utils/i18n";

export async function getStaticPaths() {
  return getStaticPathsLocales().map((lang) => ({
    params: { lang },
  }));
}

type GagEntry = CollectionEntry<"gags">;

const { lang: langParam } = Astro.params;
const lang = normalizeLang(langParam);

const t = useTranslations(lang);

const allGags = await getCollection("gags", ({ data }: GagEntry) => {
  return data.published === true;
});

// Google Analytics에서 페이지 조회수 데이터 가져오기
const pageViewsMap = await getPageViewsMap();

// 최신순으로 정렬 (createdAt 기준)
const sortedGags = allGags.sort((a: GagEntry, b: GagEntry) => {
  return (
    new Date(b.data.createdAt).getTime() - new Date(a.data.createdAt).getTime()
  );
});

// 표시할 개수 제한 (12개)
const displayGags = sortedGags.slice(0, 12);
---

<Layout
  title={t("최신 개그", "Latest Puns")}
  description={t("최근에 추가된 신선한 개그들", "Recently added fresh puns")}
  currentPage="latest"
  lang={lang}
>
  <!-- 헤더 섹션 -->
  <section
    class="from-primary/5 to-background bg-gradient-to-b px-4 pt-12 pb-8"
  >
    <div class="container mx-auto max-w-4xl">
      <Heading
        title={`🌟 ${t("최신 개그", "Latest Puns")}`}
        subtitle={t("최근에 추가된 신선한 개그들", "Recently added fresh puns")}
      />
    </div>
  </section>

  <!-- 최신 개그 섹션 -->
  <section class="px-4 pt-6 pb-8">
    <div class="container mx-auto max-w-6xl">
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {
          displayGags.map((gag: GagEntry) => (
            <ListCard
              gag={gag}
              lang={lang}
              pageViews={pageViewsMap.get(gag.data.slug) || 0}
            />
          ))
        }
      </div>
    </div>
  </section>
</Layout>
