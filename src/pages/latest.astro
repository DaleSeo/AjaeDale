---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

type GagEntry = CollectionEntry<"gags">;

const allGags = await getCollection("gags", ({ data }: GagEntry) => {
  return data.published === true;
});

// 최신순으로 정렬 (createdAt 기준)
const sortedGags = allGags.sort((a: GagEntry, b: GagEntry) => {
  return (
    new Date(b.data.createdAt).getTime() - new Date(a.data.createdAt).getTime()
  );
});

// 표시할 개수 제한 (12개)
const displayGags = sortedGags.slice(0, 12);

// 페이지 메타 정보
const title = "최신 개그";
const description = "방금 올라온 따끈따끈한 개그들을 만나볼까요?";

// 상대적 시간 계산 함수
function getRelativeTime(date: Date): string {
  const now = new Date();
  const diffInMs = now.getTime() - date.getTime();
  const diffInDays = Math.floor(diffInMs / (1000 * 60 * 60 * 24));

  if (diffInDays === 0) {
    return "오늘";
  } else if (diffInDays === 1) {
    return "1일 전";
  } else if (diffInDays < 7) {
    return `${diffInDays}일 전`;
  } else if (diffInDays < 30) {
    const weeks = Math.floor(diffInDays / 7);
    return `${weeks}주 전`;
  } else if (diffInDays < 365) {
    const months = Math.floor(diffInDays / 30);
    return `${months}개월 전`;
  } else {
    const years = Math.floor(diffInDays / 365);
    return `${years}년 전`;
  }
}
---

<Layout title={title} description={description} currentPage="latest">
  <!-- 헤더 섹션 -->
  <section class="py-12 px-4 bg-gradient-to-b from-primary/5 to-background">
    <div class="container mx-auto text-center max-w-4xl">
      <h1 class="text-3xl md:text-4xl font-bold text-foreground mb-3">
        🌟 {title}
      </h1>
      <p class="text-lg text-muted-foreground">
        {description}
      </p>
    </div>
  </section>

  <!-- 최신 개그 섹션 -->
  <section class="py-8 px-4">
    <div class="container mx-auto max-w-6xl">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          displayGags.map((gag: GagEntry, index: number) => (
            <div class="relative">
              <div class="absolute -top-3 -left-3 z-10 w-10 h-10 bg-primary text-primary-foreground rounded-full flex items-center justify-center font-bold text-sm shadow-md">
                #{index + 1}
              </div>
              <div class="absolute -top-3 -right-3 z-10 px-3 py-1 bg-secondary text-secondary-foreground rounded-full text-xs font-medium shadow-md">
                {getRelativeTime(new Date(gag.data.createdAt))}
              </div>
              <Card gag={gag} />
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
