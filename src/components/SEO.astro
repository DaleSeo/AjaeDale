---
import type { Lang } from "../utils/i18n";

export interface Props {
  title?: string;
  description?: string;
  lang?: Lang;
  alternateUrl?: string;
  image?: string;
}

const { title, description, lang = "ko", alternateUrl, image } = Astro.props;

const defaultTitle = lang === "ko" ? "아재달레" : "AjaeDale";
const defaultDescription =
  lang === "ko"
    ? "한국 아저씨들이 사랑하는 개그 총집합! 아재개그 웃어달레 ^^"
    : "The ultimate collection of Korean dad jokes! Laugh with us :)";

const finalTitle = title || defaultTitle;
const finalDescription = description || defaultDescription;

// Get current URL without query params or hash
const canonicalUrl = new URL(Astro.url.pathname, Astro.url.origin).href;

// Use custom image or default og-image
const ogImageUrl = image
  ? new URL(image, Astro.url.origin).href
  : new URL("/og-image.png", Astro.url.origin).href;

// Convert relative alternateUrl to absolute URL
const absoluteAlternateUrl = alternateUrl
  ? new URL(alternateUrl, Astro.url.origin).href
  : undefined;
---

<meta name="description" content={finalDescription} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalUrl} />

<!-- Multilingual hreflang tags -->
{
  absoluteAlternateUrl && (
    <>
      <link rel="alternate" hreflang={lang} href={canonicalUrl} />
      <link
        rel="alternate"
        hreflang={lang === "ko" ? "en" : "ko"}
        href={absoluteAlternateUrl}
      />
      <link
        rel="alternate"
        hreflang="x-default"
        href={canonicalUrl.replace("/en/", "/")}
      />
    </>
  )
}

<!-- Open Graph for social sharing -->
<meta property="og:site_name" content="아재달레" />
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={finalTitle} />
<meta property="og:description" content={finalDescription} />
<meta property="og:locale" content={lang === "ko" ? "ko_KR" : "en_US"} />
{
  alternateUrl && (
    <meta
      property="og:locale:alternate"
      content={lang === "ko" ? "en_US" : "ko_KR"}
    />
  )
}
<meta property="og:image" content={ogImageUrl} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={finalTitle} />
<meta name="twitter:description" content={finalDescription} />
<meta name="twitter:image" content={ogImageUrl} />
