---
import GithubIcon from "../icons/Github.astro";
import HeartIcon from "../icons/Heart.astro";
import CoffeeIcon from "../icons/Coffee.astro";
import { getLangFromUrl, getLocalizedUrl } from "../utils/i18n";

const lang = getLangFromUrl(Astro.url);

// 컴포넌트별 메시지 정의
const messages = {
  ko: {
    home: {
      title: "아재달레",
    },
    description:
      "한국 아저씨들의 아재개그를 사랑하는 모든 분들을 위한 공간입니다. 매일 새로운 웃음을 선사해드립니다.",
    quickLinks: "바로가기",
    nav: {
      tags: "개그 분류",
      search: "개그 검색",
      saved: "개그 저장",
      submit: "개그 제보",
      api: "개그 API",
    },
    copyright: "© 2025 아재달레. All rights reserved.",
    madeWith: "Made with ❤️ for 아재",
  },
  en: {
    home: {
      title: "AjaeDale",
    },
    description:
      "A space for everyone who loves Korean puns. We bring you new laughs every day.",
    quickLinks: "Quick Links",
    nav: {
      tags: "Tags",
      search: "Search",
      saved: "Saved",
      submit: "Submit",
      api: "Pun API",
    },
    copyright: "© 2025 AjaeDale. All rights reserved.",
    madeWith: "Made with ❤️ for Dads",
  },
};

const t = messages[lang as keyof typeof messages] || messages.ko;
---

<footer class="bg-muted/50 px-4 py-12" data-pagefind-ignore="all">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <!-- 로고 및 설명 -->
      <div class="col-span-1 md:col-span-2">
        <div class="mb-4 flex items-center space-x-2">
          <img
            src="/logo.png"
            alt={t.home.title}
            class="h-8 w-8 rounded-full"
          />
          <h3 class="text-foreground text-xl font-bold">
            {t.home.title}
          </h3>
        </div>
        <p class="text-muted-foreground mb-4 max-w-md">
          {t.description}
        </p>
        <div class="flex items-center space-x-4">
          <a
            href="https://github.com/DaleSeo/AjaeDale"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:bg-accent rounded-md p-2 transition-colors"
            aria-label="GitHub"
          >
            <GithubIcon size={16} />
          </a>
          <a
            href="https://www.buymeacoffee.com/daleseo"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:bg-accent rounded-md p-2 transition-colors"
            title="Buy me a coffee"
          >
            <CoffeeIcon size={16} />
          </a>
        </div>
      </div>

      <!-- 바로가기 -->
      <div>
        <h4 class="text-foreground mb-4 font-semibold">
          {t.quickLinks}
        </h4>
        <ul class="space-y-2">
          <li>
            <a
              href={getLocalizedUrl("/tags", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t.nav.tags}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedUrl("/search", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t.nav.search}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedUrl("/saved", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t.nav.saved}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedUrl("/submit", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t.nav.submit}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedUrl("/api", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t.nav.api}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- 하단 저작권 -->
    <div
      class="border-border text-muted-foreground mt-12 border-t pt-8 text-center text-sm"
    >
      <p>{t.copyright}</p>
      <p class="mt-2 flex items-center justify-center gap-1">
        {t.madeWith.split("❤️")[0]}
        <HeartIcon size={14} class="inline text-red-500" fill="currentColor" />
        {t.madeWith.split("❤️")[1]}
      </p>
    </div>
  </div>
</footer>
