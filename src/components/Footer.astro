---
import GithubIcon from "../icons/Github.astro";
import HeartIcon from "../icons/Heart.astro";
import CoffeeIcon from "../icons/Coffee.astro";
import {
  getLangFromUrl,
  useTranslations,
  getLocalizedUrl,
} from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-muted/50 px-4 py-12" data-pagefind-ignore="all">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <!-- 로고 및 설명 -->
      <div class="col-span-1 md:col-span-2">
        <div class="mb-4 flex items-center space-x-2">
          <img
            src="/logo.png"
            alt={t("home.hero.title")}
            class="h-8 w-8 rounded-full"
          />
          <h3 class="text-foreground text-xl font-bold">
            {t("home.hero.title")}
          </h3>
        </div>
        <p class="text-muted-foreground mb-4 max-w-md">
          {t("footer.description")}
        </p>
        <div class="flex items-center space-x-4">
          <a
            href="https://github.com/DaleSeo/AjaeDale"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:bg-accent rounded-md p-2 transition-colors"
            aria-label="GitHub"
          >
            <GithubIcon size={16} />
          </a>
          <a
            href="https://www.buymeacoffee.com/daleseo"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:bg-accent rounded-md p-2 transition-colors"
            title="Buy me a coffee"
          >
            <CoffeeIcon size={16} />
          </a>
        </div>
      </div>

      <!-- 바로가기 -->
      <div>
        <h4 class="text-foreground mb-4 font-semibold">
          {t("footer.quickLinks")}
        </h4>
        <ul class="space-y-2">
          <li>
            <a
              href={getLocalizedUrl("/latest", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t("footer.nav.latest")}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedUrl("/popular", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t("footer.nav.popular")}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedUrl("/random", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t("footer.nav.random")}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedUrl("/tags", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t("footer.nav.tags")}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedUrl("/search", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t("footer.nav.search")}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedUrl("/saved", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t("footer.nav.saved")}
            </a>
          </li>
          <li>
            <a
              href={getLocalizedUrl("/submit", lang)}
              class="text-muted-foreground hover:text-primary transition-colors"
            >
              {t("footer.nav.submit")}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- 하단 저작권 -->
    <div
      class="border-border text-muted-foreground mt-12 border-t pt-8 text-center text-sm"
    >
      <p>{t("footer.copyright")}</p>
      <p class="mt-2 flex items-center justify-center gap-1">
        {t("footer.madeWith").split("❤️")[0]}
        <HeartIcon size={14} class="inline text-red-500" fill="currentColor" />
        {t("footer.madeWith").split("❤️")[1]}
      </p>
    </div>
  </div>
</footer>
