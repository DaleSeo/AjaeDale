<script>
  import { initGagInteractions } from "../scripts/gagInteractions";

  // í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
  initGagInteractions();

  // í”Œë¦½ ì¹´ë“œ ìƒí˜¸ì‘ìš©
  document.addEventListener("DOMContentLoaded", () => {
    const initCardFlip = () => {
      const cards = document.querySelectorAll("[data-gag-slug]");

      cards.forEach((card) => {
        // ì¤‘ë³µ ë°©ì§€ë¥¼ ìœ„í•´ ê¸°ì¡´ ë¦¬ìŠ¤ë„ˆ ì œê±°
        const newCard = card.cloneNode(true) as HTMLElement;
        card.parentNode?.replaceChild(newCard, card);

        newCard.addEventListener("click", (e) => {
          const target = e.target as HTMLElement;

          // ë²„íŠ¼ì´ë‚˜ ë§í¬ ë“± ìƒí˜¸ì‘ìš© ìš”ì†Œë¥¼ í´ë¦­í•œ ê²½ìš° í”Œë¦½í•˜ì§€ ì•ŠìŒ
          if (
            target.closest("[data-no-flip]") ||
            target.closest("button") ||
            target.closest("a") ||
            target.tagName === "BUTTON" ||
            target.tagName === "A"
          ) {
            return;
          }

          // ì¹´ë“œ ë’¤ì§‘ê¸° í† ê¸€
          newCard.classList.toggle("flipped");
        });
      });
    };

    // ì²« ë¡œë“œ ì‹œ ì´ˆê¸°í™”
    initCardFlip();

    // Astro View Transitions ì‚¬ìš© ì‹œ ì¬ì´ˆê¸°í™”
    document.addEventListener("astro:after-swap", initCardFlip);
  });
</script>
